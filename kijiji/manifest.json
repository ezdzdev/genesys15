{
  "manifest_version": 2,

  "name": "looter",
  "description": "loot",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://*.kijiji.ca/*"],
      "js": ["myscript.js"]
    }
  ],
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "notifications"
   ]
}
